{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ],
      "/*": ["src/*"],
    },
    "target": "ES5",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": [
    "src",
    "./jest/setup.ts"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
}